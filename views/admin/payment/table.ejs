<table id="example2" class="table table-bordered table-hover">
    <thead>
    <tr>
      <th>No</th>
      <th>Type Of Payment</th>
      <th>Bank</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
      <% for(let i = 0; i < payment.length; i++){ %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= payment[i].type %></td>
          <td>
            <% payment[i].banks?.forEach(bank => { %>
                <span class="badge badge-warning">
                  <%= bank?.name%> - <%= bank?.bank_name %> - <%= bank?.norek %>
                </span>
              <% }) %>
          </td>
          <td>
            <% if(payment[i].status === 'Y') { %>
              <span class="badge badge-success">
                ON
              </span>
            <% } else { %>
              <span class="badge badge-danger">
                OFF
              </span>
            <% } %>
          </td>
          <td>
            <form action="/payment/status/<%= payment[i].id %>?_method=PUT" method="POST" style="display: inline-block;">
              <button class="btn btn-primary btn-sm">
                <i class="fas fa-folder"></i>
                <% if(payment[i].status === 'Y') { %>
                    OFF
                <% } else { %>
                    ON
                <% } %>
              </button>
            </form>
            <a href="/payment/edit/<%= payment[i].id %>" class="btn btn-info btn-sm">
              <i class="fas fa-pencil-alt"></i>
              Edit
            </a>
            <form action="/payment/delete/<%= payment[i].id %>?_method=DELETE" method="POST" style="display: inline-block;"> 
              <button class="btn btn-danger btn-sm">
                <i class="fas fa-trash"></i>
                Delete
              </button>
            </form>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>