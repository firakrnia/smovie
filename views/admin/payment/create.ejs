<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Type Of Payment</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/payment">Type Of Payment</a></li>
              <li class="breadcrumb-item active">New Payment</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
            <div class="card-body">
                <div class="card card-primary">
                    <div class="card-header">
                      <h3 class="card-title">Add Payment</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form action="/payment/add" method="post">
                      <div class="card-body">
                        <div class="form-group">
                          <label for="type">Type</label>
                          <input type="text" name="type" class="form-control" id="type" placeholder="Enter Type Of Payment" required>
                        </div>
                        <div class="form-group">
                            <label>Bank</label>
                            <div class="select2-purple">
                              <select 
                                class="form-control select2" 
                                multiple="multiple" 
                                data-placeholder="Select Bank"
                                style="width: 100%;"
                                name="bank" 
                                required>
                                <% bank.forEach(account=>{ %>
                                  <option value="<%= account.id %>"><%= account.name %> - <%= account.bank_name %> - <%= account.norek %></option>
                                <% }) %>
                                
                              </select>
          
                            </div>
                          </div>
                      </div>
                      <!-- /.card-body -->
      
                      <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </div>
                    </form>
                  </div>
              </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>