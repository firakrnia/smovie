<table id="example2" class="table table-bordered table-hover">
    <thead>
    <tr>
      <th>No</th>
      <th>Type</th>
      <th>Type Name</th>
      <th>Price</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
      <% for(let i = 0; i < specification.length; i++){ %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= specification[i].type %></td>
          <td><%= specification[i].type_name %></td>
          <td><%= specification[i].price %></td>
          <td>
            <form action="/specification/delete/<%= specification[i].id %>?_method=DELETE" method="POST">
              <a href="/specification/edit/<%= specification[i].id %>" class="btn btn-info btn-sm">
                <i class="fas fa-pencil-alt"></i>
                Edit
              </a>
              <button class="btn btn-danger btn-sm">
                <i class="fas fa-trash"></i>
                Delete
              </button>
            </form>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>